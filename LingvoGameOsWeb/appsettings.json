{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // Все от Microsoft - только Warning и выше
        "System": "Warning", // Все от System - только Warning и выше  
        "Microsoft.AspNetCore": "Warning", // Особенно важно - ASP.NET Core только Warning
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning" // Конкретно MVC логи
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "filter": "IsCustomLog = true"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/game-portal-.json",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30 // храним логи 30 дней
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName",
      "WithCorrelationId", // для отслеживания цепочек запросов
      "WithClientIp", // IP клиента
      "WithClientAgent" // User-Agent
    ],
    "Properties": {
      "Application": "GamePortal",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=lingvo.db"
  }
}
