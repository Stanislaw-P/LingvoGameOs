@model ForgotPasswordViewModel

@{
    Layout = null;
    ViewData["Title"] = "Забыли пароль?";
    ViewData["FaviconUrl"] = "/img/logo/logo_2.1.svg";
}
<head>
    <title>Забыли пароль?</title>
    <link rel="icon" href="/img/logo/logo_2.1.svg" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: auto;
    }

    body {
        min-height: 100vh;
        min-width: 100vw;
        width: 100vw;
        height: auto;
        background: url('/img/b11ed6d9-17da-4307-9a85-eebe93cdb78e.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        box-sizing: border-box;
    }

    .login-main-block {
        position: relative;
        background: rgba(255, 255, 255, 0.96);
        box-shadow: 0 8px 32px rgba(44, 81, 174, 0.18);
        border-radius: 10px 70px 10px 70px;
        padding: 40px 32px 32px 32px;
        width: 80%;
        max-width: 1200px;
        max-height: 90vh;
        display: flex;
        flex-direction: row;
        align-items: stretch;
        gap: 32px;
        font-family: 'Axiforma', Arial, sans-serif;
        box-sizing: border-box;
        overflow-y: auto;
    }

    .login-main-left {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 28px;
        min-width: 300px;
        font-family: 'Axiforma', Arial, sans-serif;
    }

    .login-main-right {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        flex: 1;
        min-width: 300px;
        max-width: 50%;
    }

    .login-photo-inside {
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
        aspect-ratio: 651/716;
        border-radius: 10px 70px 10px 70px;
        object-fit: cover;
        box-shadow: 0 4px 24px rgba(44, 81, 174, 0.10);
        border: 3px solid #f8fafe;
        background: #f8fafe;
        display: block;
    }

    .login-back-btn {
        position: absolute;
        top: 8px;
        left: 8px;
        background: #f8fafe;
        color: #2c51ae;
        font-family: 'Axiforma', Arial, sans-serif;
        font-size: 18px;
        font-weight: 600;
        border: none;
        border-radius: 73px;
        padding: 12px 32px;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(44, 81, 174, 0.08);
        transition: background 0.2s, color 0.2s;
        z-index: 2;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .login-back-btn:hover {
            background: #e6ecfa;
            color: #4666d0;
        }

    .login-title {
        font-size: 32px;
        color: #2c51ae;
        font-family: 'Axiforma', Arial, sans-serif;
        font-weight: bold;
        text-align: center;
        margin-bottom: 12px;
        margin-top: 0;
    }

    .login-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 22px;
        font-family: 'Axiforma', Arial, sans-serif;
    }

    .login-field {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 6px;
        font-family: 'Axiforma', Arial, sans-serif;
    }

    .login-label {
        font-size: 15px;
        color: #7a7a7a;
        font-weight: 500;
        font-family: 'Axiforma', Arial, sans-serif;
    }

    .login-input {
        width: 100%;
        padding: 15px;
        border-radius: 73px;
        border: 1px solid #e6ecfa;
        background: #f8fafe;
        font-size: 16px;
        outline: none;
        transition: border 0.2s;
        box-sizing: border-box;
        font-family: 'Axiforma', Arial, sans-serif;
    }

        .login-input:focus {
            border: 1.5px solid #2c51ae;
        }

    .login-btn-main {
        width: 100%;
        background: #2c51ae;
        color: #fff;
        border: none;
        border-radius: 73px;
        padding: 15px 0;
        font-size: 19px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 4px;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(44, 81, 174, 0.08);
        font-family: 'Axiforma', Arial, sans-serif;
    }

        .login-btn-main:hover {
            background: #4666d0;
        }

    .login-validation {
        color: #e74c3c;
        font-size: 13px;
        font-family: 'Axiforma', Arial, sans-serif;
    }

    /* Мобильная адаптация */
    @@media (max-width: 768px) {
        body {
            align-items: flex-start;
            padding: 10px;
            height: auto;
            min-height: 100vh;
            overflow-y: auto;
        }

        .login-main-block {
        width: 100%;
            max-width: 100%;
            max-height: none;
            padding: 50px 20px 30px 20px;
            flex-direction: column;
            border-radius: 10px 40px 10px 40px;
            gap: 25px;
            margin: 0;
        }

        .login-main-right {
            display: none; /* Картинка скрывается на мобильных */
        }

        .login-main-left {
            width: 100%;
            gap: 20px;
            min-width: auto;
        }

        .login-back-btn {
            position: absolute;
            top: 8px;
            left: 8px;
            font-size: 16px;
            padding: 10px 20px;
            z-index: 2;
        }

        .login-title {
            font-size: 28px;
            margin-bottom: 15px;
            margin-top: 10px;
        }

        .login-form {
            gap: 18px;
        }

        .login-input {
            padding: 14px 15px;
            font-size: 16px;
        }

        .login-btn-main {
            padding: 14px 0;
        font-size: 17px;
        }
    }

    /* Дополнительная адаптация для очень маленьких экранов */
    @@media (max-width: 480px) {
        body {
            padding: 5px;
        }

        .login-main-block {
            padding: 45px 15px 25px 15px;
            border-radius: 10px 30px 10px 30px;
            gap: 20px;
        }

        .login-back-btn {
            top: 8px;
            left: 8px;
            font-size: 14px;
            padding: 8px 16px;
        }

        .login-title {
            font-size: 24px;
            margin-bottom: 12px;
        }

        .login-form {
            gap: 15px;
        }

        .login-input {
            padding: 12px 15px;
            font-size: 16px;
        }

        .login-btn-main {
            padding: 12px 0;
            font-size: 16px;
        }
    }

    /* Для очень высоких экранов */
    @@media (min-height: 800px) and (max-width: 768px) {
        body {
            align-items: center;
            padding: 20px;
        }

        .login-main-block {
            margin-top: 40px;
        }
    }

    /* Для горизонтальной ориентации на мобильных */
    @@media (max-width: 768px) and (orientation: landscape) {
        body {
            align-items: flex-start;
            padding: 10px;
    }

        .login-main-block {
            max-height: 85vh;
            overflow-y: auto;
        }

        .login-back-btn {
            top: 8px;
            left: 8px;
            font-size: 14px;
            padding: 8px 16px;
        }
    }

    /* Для планшетов */
    @@media (min-width: 769px) and (max-width: 1024px) {
        .login-main-block {
            width: 90%;
            padding: 35px 28px 28px 28px;
        }

        .login-back-btn {
            top: 8px;
            left: 8px;
            font-size: 17px;
            padding: 11px 28px;
        }
    }
</style>

<div class="login-main-block">
    <a href="/" class="login-back-btn">Назад</a>
    <div class="login-main-left">
        <h1 class="login-title">Забыли пароль?</h1>
        <form method="post" class="login-form">
            <div class="login-field">
                <label asp-for="UserName" class="login-label">Введите электронную почту</label>
                <input type="email" asp-for="UserName" class="login-input" placeholder="Введите электронную почту" />
                <span asp-validation-for="UserName" class="login-validation" />
            </div>
            <button type="submit" asp-controller="Account" asp-action="ForgotPassword" class="login-btn-main">Продолжить</button>
            <div style="color:red" class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
    <div class="login-main-right">
        <img src="~/img/Registration.png" alt="Историческая сцена" class="login-photo-inside" />
    </div>
</div>

@section Scripts {
    <script>
        // Password field is now always visible, so no JS needed for reveal
    </script>
}

@await Html.PartialAsync("_ValidationScriptsPartial")