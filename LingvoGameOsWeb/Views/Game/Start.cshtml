@{
    ViewData["Title"] = ViewBag.GameTitle;
}

<div class="wrapper">
    <div id="header-placeholder"></div>

    @if (ViewBag.GameUrl == null)
    {
        <div class="game-play__loading" id="loadingScreen">
            <p class="game-play__loading-text">Загрузка...</p>
        </div>
    }
    else
    {
        <!-- Адаптивный контейнер для iframe -->
        <div class="game-container">
            <iframe src="@ViewBag.GameUrl"
                    frameborder="0"
                    allowfullscreen
                    class="game-iframe">
            </iframe>
        </div>
    }

    <div id="footer-placeholder"></div>
</div>

@* Не перемещать!!! Стили для адаптации iframe. позже перенесу сама. *@
<style>
    .game-container {
        position: relative;
        width: 100%;
        max-width: 800px;
        margin: 20px auto;
        aspect-ratio: 9/16;
        background: var(--bg-light);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    .game-iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    @@supports not (aspect-ratio: 9/16) {
        .game-container {
            height: 0;
            padding-bottom: 177.77%;
        }
    }

    @@media (max-width: 768px) {
        .game-container {
            max-width: 100%;
            margin: 10px auto;
            border-radius: 0;
        }
    }

    @@media (max-width: 480px) {
        .game-container {
            aspect-ratio: 9/18;
        }
    }
</style>